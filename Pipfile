[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[requires]
python_version = "3.11"

[packages]
cookiecutter = "~=2.1"

[dev-packages]
# testing
pytest = "*"
pytest-env = "*"
pytest-mock = "*"

# code quality
flake8 = "6.0.0"
black = "23.3.0"
isort = "5.12.0"
mypy = "1.2.0"
pre-commit = "*"

[scripts]
# set up the project
setup = """bash -c '
    pipenv install -d --deploy && \
    pre-commit install --install-hooks
'"""

# run tests
test = "pytest"

# check code quality
codeqa = "pre-commit run --all-files"
